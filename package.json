{
  "name": "remix-template-vercel-ts",
  "private": true,
  "description": "",
  "license": "",
  "sideEffects": false,
  "scripts": {
    "generate:css:light": "tailwindcss -i ./app/styles/tailwind.css -o ./app/tailwind.css",
    "generate:css:dark": "tailwindcss -i ./app/styles/dark.css -o ./app/dark-theme.css",
    "build:css": "pnpm generate:css:light -- --minify && pnpm generate:css:dark -- --minify",
    "build:remix": "remix build",
    "build": "pnpm run-s build:*",
    "dev:css": "pnpm generate:css:light -- --watch && pnpm generate:css:dark -- --watch",
    "dev:remix": "remix dev",
    "dev": "pnpm run-p dev:*",
    "postinstall": "remix setup node"
  },
  "dependencies": {
    "@remix-run/react": "^1.3.3",
    "@remix-run/vercel": "^1.3.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.3.3",
    "clsx": "^1.1.1",
    "tiny-invariant": "^1.2.0"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.3.3",
    "@remix-run/eslint-config": "^1.3.3",
    "@remix-run/serve": "^1.3.3",
    "@tailwindcss/forms": "^0.5.0",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "eslint": "^8.11.0",
    "prettier": "^2.5.1",
    "prettier-plugin-tailwindcss": "^0.1.8",
    "typescript": "^4.5.5",
    "tailwindcss": "^3.0.23",
    "postcss": "^8.4.12",
    "autoprefixer": "^10.4.4",
    "npm-run-all": "^4.1.5"
  },
  "eslintIgnore": [
    "node_modules",
    ".cache",
    ".env",
    ".vercel",
    ".output",
    "/build/",
    "/public/build",
    "/api/index.js",
    "/app/tailwind.css"
  ],
  "engines": {
    "node": ">=14"
  }
}
